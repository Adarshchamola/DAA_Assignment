#include<iostream>
using namespace std;
#define MAX 100
void sort_desc(int*, int);
int main()
{
    int arr[MAX], i, j, n, key, count=0;
    cout << "Enter the number of elements: ";
    cin >> n;
    for(i=0; i<n; i++)
    {
        cout<<"Enter the elements: ";
        cin>>arr[i];
    }
    sort_desc(arr, n);
    cout<<"Enter the key: ";
    cin>>key;
    for(i=0; i<n; i++)
    {
        for(j=i+1; j<n; j++)
        {
            if(arr[i]-arr[j]==key)
                count++;
        }
    }
    cout<<count<<endl;
}

void sort_desc(int* arr, int n)
{
    int temp;
    for(int i=0; i<n; i++)
    {
        for(int j=0; j<n; j++)
        {
            if(arr[i]>arr[j])
            {
                temp = arr[i];
                arr[i]=arr[j];
                arr[j]=temp;
            }
        }
    }
}
